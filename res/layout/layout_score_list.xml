<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_paint_jiasu"
            style="@style/home_score_list_item"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_rocket"
            android:text="手机加速" />

        <TextView
            android:id="@+id/tv_paint_guanli"
            style="@style/home_score_list_item"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_softmgr"
            android:text="软件管理" />

        <TextView
            android:id="@+id/tv_paint_jiance"
            style="@style/home_score_list_item"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_phonemgr"
            android:text="手机检测" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_paint_tongxun"
            style="@style/home_score_list_item"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_telmgr"
            android:text="通讯大全" />

        <TextView
            android:id="@+id/tv_paint_file"
            style="@style/home_score_list_item"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_filemgr"
            android:text="文件管理" />

        <TextView
            android:id="@+id/tv_paint_clean"
            style="@style/home_score_list_item"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_sdclean"
            android:text="垃圾清理" />
    </LinearLayout>

</LinearLayout>