<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/seting_item_entry" >

    <CheckBox
        android:id="@+id/cb_app_clear_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/check_crooct" >
    </CheckBox>

    <ImageView
        android:id="@+id/iv_clear_icon_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cb_app_clear_item"
        android:background="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_app_lable_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_clear_icon_item"
        android:text="QQ" />

    <TextView
        android:id="@+id/tv_app_system_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_app_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="2.2M"
        android:textSize="14sp" />

</RelativeLayout>