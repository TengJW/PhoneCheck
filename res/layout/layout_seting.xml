<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rel_seting_onstart"
        style="@style/setting_item_style" >

        <TextView
            android:id="@+id/tv_onstart"
            style="@style/setting_textview_style"
            android:text="开机启动" />

        <ToggleButton
            android:id="@+id/ima_onstart"
            style="@style/seting_item_togglebutton" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_seting_help"
        style="@style/setting_item_style" >

        <TextView
            android:id="@+id/tv_help"
            style="@style/setting_textview_style"
            android:text="帮助" />

        <ToggleButton
            android:id="@+id/ima_help"
            style="@style/seting_item_togglebutton" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_seting_1"
        style="@style/setting_item_style" >

        <TextView
            android:id="@+id/tv_seting_1"
            style="@style/setting_textview_style"
            android:text="亮度" />

        <ToggleButton
            android:id="@+id/ima_seting_1"
            style="@style/seting_item_togglebutton" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_seting_2"
        style="@style/setting_item_style" >

        <TextView
            android:id="@+id/tv_seting_2"
            style="@style/setting_textview_style"
            android:text="显示通知" />

        <ToggleButton
            android:id="@+id/ima_seting_2"
            style="@style/seting_item_togglebutton" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_seting_3"
        style="@style/setting_item_style"
        android:onClick="hitsettingitem" >

        <TextView
            android:id="@+id/tv_seting_3"
            style="@style/setting_textview_style"
            android:text="使用说明" />

        <ImageView
            android:id="@+id/ima_seting_3"
            style="@style/setting_item_right" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rel_seting_6"
        style="@style/setting_item_style"
        android:onClick="hitsettingitem" >

        <TextView
            android:id="@+id/tv_seting_6"
            style="@style/setting_textview_style"
            android:text="功能设置" />

        <ImageView
            android:id="@+id/ima_seting_6"
            style="@style/setting_item_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_seting_4"
        style="@style/setting_item_style" >

        <TextView
            android:id="@+id/tv_seting_4"
            style="@style/setting_textview_style"
            android:text="版本" />

        <ImageView
            android:id="@+id/ima_seting_4"
            style="@style/setting_item_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_seting_5"
        style="@style/setting_item_style"
        android:onClick="hitsettingitem" >

        <TextView
            android:id="@+id/tv_seting_5"
            style="@style/setting_textview_style"
            android:text="关于我们" />

        <ImageView
            android:id="@+id/ima_seting_5"
            style="@style/setting_item_right" />
    </RelativeLayout>

</LinearLayout>